<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/sandwich_picture_content_description"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_above="@+id/also_known_label"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/also_known_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_also_known_as_label"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingRight="4dp" />

            <TextView
                android:id="@+id/also_known_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/also_known_label"
                android:paddingBottom="8dp"/>


            <TextView
                android:id="@+id/origin_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/also_known_tv"
                android:text="@string/detail_place_of_origin_label"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/origin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/origin_label"
                android:layout_below="@+id/also_known_tv"
                android:paddingBottom="8dp"/>


            <TextView
                android:id="@+id/ingredients_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/origin_tv"
                android:text="@string/detail_ingredients_label"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/ingredients_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ingredients_label"
                android:layout_below="@id/origin_tv"
                android:paddingBottom="8dp"/>


            <TextView
                android:id="@+id/description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ingredients_tv"
                android:text="@string/detail_description_label"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:paddingRight="4dp"/>

            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/description_label"
                android:layout_below="@id/ingredients_tv"
                android:paddingBottom="8dp"/>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
